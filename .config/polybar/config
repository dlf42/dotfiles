[colors]
background = #2E3440
foreground = #E5E9F0
blue=#81A1C1
red=#BF616A
green=#A3BE8C
yellow=#EBCB8B
magenta=#B48EAD
cyan=#88C0D0
accented=#5E81AC
hideout=#4C566A

[global/wm]
margin-top = 5
margin-bottom = 100

[bar/nordbar]
monitor =
monitor-fallback =

padding = 0

font-0 = Fira Code Retina:style=Retina:size=10;1
font-1 = Open Sans Hebrew:style=Regular:size=10;1
font-2 = Material Icons:size=10;3
font-3 = Font Awesome 5 Free:size=10;3
font-4 = FontAwesome:size=10;2


dpi-x = 96
dpi-y = 96

wm-restack = i3

tray-position = right
tray-padding=1
tray-scale = 1.0
tray-background=${colors.blue}
tray-margin=0

fixed-center = true

width = 99%
height = 24

override-redirect = true
offset-x = 0.5%
offset-y = 10

background = ${colors.background}
foreground = ${colors.foreground}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

line-size = 3
border-size = 0
border-color = ${colors.background}

module-margin-left = 0
module-margin-right = 0

cursor-click = pointer
cursor-scroll = ns-resize

modules-left = i3
modules-center = time-SF time-NY time time-tsk time-BR
modules-right = date system-usb-udev cpu memory temp-mother temp-gpu temp-cpu arch-aur-updates layout wifi audio

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true
format = <label-state> <label-mode>
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 1
label-mode-foreground =${colors.background}
label-mode-background =${colors.accented}

label-focused =  %name%
label-focused-background = ${colors.blue}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

label-unfocused =  %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 1
label-urgent-underline = ${colors.yellow}

[module/time]
type = internal/date
interval = 1.0
time = %H:%M
label = %time%
label-font = 2
label-margin = 1

[module/date]
type = internal/date
date = %d %b '%y, %a
label =  %date%
label-margin = 1
format = <label>
format-foreground =  ${colors.hideout}
label-font = 2


